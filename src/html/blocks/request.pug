div#request.request.modal.fade(tabindex="-1", aria-hidden="true")
  div.request__dialog.modal-dialog.modal-dialog-centered
    div.request__content.modal-content
      button.request__close.btn-close(type="button", data-bs-dismiss="modal" aria-label="Close")
      div.request__body.modal-body
        div.request__header
          a.request__header-logo(href="index.html")
            img.request__header-logo-img(src="img/svg/logo.svg", alt="ProMind")
        div.request__wrap
          div.request__left
            div.request__title Оставьте  вашу заявку!
            div.request__description
              div.request__description-text Заполните ваши данные или позвоните по телефону
              a.request__description-phone(href="tel:+74952552992") +7 495 255-29-92
            form.request__form(action="/", method="post")
              div.request__form-flex
                label.request__form-label
                  input.request__form-input(type="text", placeholder="Ваше имя*")
                label.request__form-label
                  input#userPhone.request__form-input(type="tel", placeholder="+7 (___) ___-__-__*")
                label.request__form-label
                  input.request__form-input(type="email", placeholder="Ваш e-mail*")
                label.request__form-label
                  input.request__form-input(type="text", placeholder="Компания")
              div.request__service
                div.request__service-title Выберите услугу
                div.request__service-wrap
                  div.request__service-item
                    input#requestService1.request__service-checkbox(type="checkbox")
                    label.request__service-label(for="requestService1") Веб-дизайн
                  div.request__service-item
                    input#requestService2.request__service-checkbox(type="checkbox")
                    label.request__service-label(for="requestService2") Графический дизайн
                  div.request__service-item
                    input#requestService3.request__service-checkbox(type="checkbox")
                    label.request__service-label(for="requestService3") Motion дизайн
                  div.request__service-item
                    input#requestService4.request__service-checkbox(type="checkbox")
                    label.request__service-label(for="requestService4") Web-разработка
                  div.request__service-item
                    input#requestService5.request__service-checkbox(type="checkbox")
                    label.request__service-label(for="requestService5") Техническая поддержка
                  div.request__service-item
                    input#requestService6.request__service-checkbox(type="checkbox")
                    label.request__service-label(for="requestService6") Продвижение и маркетинг
              textarea.request__textarea(placeholder="Сообщение для нас")
              label.request__file
                input#file.request__file-input(type="file")
                span.request__file-text Прикрепите файл
              div.request__send
                div.request__send-text Нажимая на кнопку Вы соглашаетесь с <a href="#">политикой обработки данных</a>
                input.request__send-btn.btn(type="submit", value="Отправить")
          div.request__right
            div.request__right-wrap
              div.request__right-title Хотите превратить свой бизнес в бренд?
              div.request__right-text Заполните ваши данные или позвоните по телефону
              a.request__right-phone(href="tel:+74952552992") +7 495 255-29-92
