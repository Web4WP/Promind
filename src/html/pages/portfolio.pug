extends ../main/layout

block variables
  - let title = "Портфолио - ProMind"
  - let bodyClass = "portfolio-page"
  - let headerClass = "header"
  - let footerClass = "footer"
  - let AnimateCSS = true;
  - let MixItUpJS = true;
  - let WowJS = true;

block main
  main
    div.container
      ul.breadcrumbs
        li.breadcrumbs__item
          a.breadcrumbs__link(href="index.html") Главная
        li.breadcrumbs__separator /
        li.breadcrumbs__item Портфолио
    section.portfolio
      div.container.container__portfolio
        div.portfolio__title
          video.portfolio__title-video(playsinline autoplay muted preload="auto" loop="loop" poster="")
            source(src="files/service-heading.mp4" type="video/mp4")
          h1.portfolio__title-text.page-title Портфолио
      div.container
        div.portfolio__filter-title Категория сайта
        div.portfolio__filter-wrap
          button.portfolio__filter-btn(data-filter="all") Все <span>49</span>
          button.portfolio__filter-btn(data-filter=".cat-1" data-sort="random") Интернет-магазин <span>3</span>
          button.portfolio__filter-btn(data-filter=".cat-2") Корпоративный сайт <span>1</span>
          button.portfolio__filter-btn(data-filter=".cat-3") Лендинг <span>5</span>
          button.portfolio__filter-btn(data-filter=".cat-4") Многостраничный сайт <span>40</span>
      div.portfolio__wrap
        div.portfolio__item.mix.cat-1
          a.portfolio__item-link(href="internal.html")
          img.portfolio__item-img(src="img/picture/portfolio/portfolio-1.jpg", alt="Lalga")
          div.portfolio__item-wrap
            h2.portfolio__item-title L’ALGA
            p.portfolio__item-text A new professional hair care and treatment line that redefines luxury through a unique #algae complex.
        div.portfolio__item.mix.cat-2
          a.portfolio__item-link(href="internal.html")
          img.portfolio__item-img(src="img/picture/portfolio/portfolio-2.jpg", alt="Lalga")
